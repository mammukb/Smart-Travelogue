<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Manage_travelogue">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Travelogue"
        android:layout_gravity="center"
        android:textColor="#3F60A0"
        android:layout_margin="40dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tt"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:textColorHint="#3F60A0"
        android:hint="Enter Title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/complaint_tt"
            android:ems="10"
            android:textColorHint="#3F60A0"
            android:textColor="#3F60A0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tth"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:hint="Enter Title"
        android:textColorHint="#3F60A0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:ems="10"
            android:inputType="text|textMultiLine"
            android:textColor="#3F60A0"
            android:textColorHint="#3F60A0" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#3F60A0"
        android:layout_gravity="center"
        android:text="Share"
        android:padding="10dp"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/Viwtravelogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Travelogue !"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style_1"
        android:padding="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="#3F60A0"
        android:textAppearance="?android:attr/textAppearanceLarge" />



</LinearLayout>